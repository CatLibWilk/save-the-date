<h2>Your Profile</h2>
<h3>{{user.firstname}} {{user.lastname}}</h3>

<h4>Profile information</h4>
    <h5>{{user.email}}</h5>
    <h5>{{user.phone}}</h5>
    <h5>Member since: {{user.createdAt}}</h5>


<h4>Message History</h4>
    <div id="history-list">   

        {{#each user.Messages}}
            <div id="message-history" class="bg-secondary m-3">
                <h5>{{this.body}}<h5>
                <h5>sent on: {{this.sendTime}}</h5>
                <div id="resend-btn" class="btn btn-warning resend" data-id={{this.id}}>Resend</div>
            </div>
        {{/each }}
        
    </div>
    <a href="/messages">Return to message center</a>
     <div class="modal" id="resendDiv">
         <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title"><i class="fas fa-exclamation"></i>Resend you Message!</h2>
                    <div id="modal-close" class="btn btn-danger">X</div>
                </div>
                        <!--End modal header-->
                <div class="modal-body">
                    <h5>Enter a new send time below</h5>
                    <input id="sendTime" name="sendTime">
                    <button type="submit" id="resend-submit" class="btn btn-primary">Resend</button>
                </div>
                        <!--End modal body-->
            </div>
                    <!--End modal content-->
        </div>
                <!--End modal-dialog-->
    </div>


