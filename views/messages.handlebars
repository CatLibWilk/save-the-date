<div id="home">
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <a href="/logout" role="button" class="btn btn-primary" style="margin-left: 80%; margin-top: 10%">Sign out</a>

                <h1>{{msg}}</h1>
                <h2>Your Messages!</h2>
                <form>
                    <div class="form-group">
                        <label for="date">Date</label>
                        <input type="date" class="form-control" id="startDate">
                    </div>
                    <div class="form-group">
                        <label for="time">Time</label>
                        <input type="time" class="form-control" id="startTime">
                    </div>
                    <div class="form-group">
                        <label for="message">Message to be sent</label>
                        <textarea class="form-control" id="startMessage" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary" id="startSubmit">Submit</button>
                </form>
                <h3>Your Messages:</h3>
                <ul id="message-list" class="list-group">
                    {{#each messages}}
                    <li data-id="{{this.id}}" class="list-group-item">
                        <button class="btn btn-danger float-right delete">ï½˜</button>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>